.container{
  padding: 0;
}
.main-sv-column{
  height: 100%;
  display: flex;
  flex: 1;
  flex-direction: column;
}
.main-title{
  position: absolute;
  font-size: 11pt;
  height: 80rpx;
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  border-bottom: 1rpx solid gray;
  background: #ffffff;
  opacity: 0.5;
}
.hv-category-board{
  width: 100%;
  /* 将此改为flex，在android手机上不可滑动 */
  display: block;
  height: 80rpx;
  flex-direction: row;
  border-bottom: 0.5rpx solid gainsboro;

}
.hv-category-board .content{
  width: 100%;
  height: 100%;
  display: flex;
  flex-flow: row nowrap;
  align-items: center;
}
.content-time{
  display: flex;
  flex: 1;
  height: 80rpx;
  justify-content: center;    
}
.content-time text{
  display: flex;
  align-items: center;
  height: 80rpx;
  font-weight: 80rpx;
}
.content text{
  height: 80rpx;
  display: flex;
  align-items: center;
  font-size: 11pt;
  margin-right: 5px;
  padding-left: 20rpx;
  white-space: nowrap;
  font-family: 'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif
}
.hv{
  display: flex;
  flex-direction: row;
}

.select{
  color: #31BFBF;
}
.underline{
  border-bottom: 1rpx solid #1b9191;
  padding: 0 10rpx;
}