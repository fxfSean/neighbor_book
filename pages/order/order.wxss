.container{
  display: flex;
  justify-content: center;
  align-items: center;
  background: white;
}
.content{
  width: 200rpx;
  height: 300rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.content .img{
  width: 80rpx;
  height: 80rpx;
}
.content .txt{
  font-size: 20rpx;
  color: gray;
  margin-top: 30rpx;
  font-family: "黑体";
  margin-bottom: 20rpx;
}
.btn{
  display: flex;
  align-items: center;
  justify-content: center;
  background: #34EA6B;
  padding: 10rpx 30rpx;
}
.btn .login{
  font-size: 23rpx;
  color: white;
  font-family: "黑体"
}